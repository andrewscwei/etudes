{
  "name": "etudes",
  "version": "7.0.0",
  "description": "A study of headless React components",
  "type": "module",
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc",
    "prepages": "rimraf .gh-pages",
    "pages": "vite build -c demo/vite.config.ts",
    "dev": "concurrently \"tsc -w\" \"wait-on -t 30s lib && vite dev -c demo/vite.config.ts --port 8080\"",
    "test": "npm run unit",
    "unit": "vitest run --coverage",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/etudes.git"
  },
  "keywords": [
    "etudes",
    "react",
    "ui",
    "components"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "files": [
    "components",
    "hooks",
    "operators",
    "providers",
    "utils"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.0.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-safe-area": "^0.6.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.0.4",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "fast-deep-equal": "^3.1.3",
    "fast-xml-parser": "^4.5.1",
    "interactjs": "^1.10.27",
    "resize-observer-polyfill": "^1.5.1",
    "spase": "^9.1.0"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "optionalDependencies": {
    "react-router": "^7.0.2"
  },
  "packageManager": "pnpm@9.15.0"
}
